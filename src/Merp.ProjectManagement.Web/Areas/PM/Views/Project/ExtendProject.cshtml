@model Merp.Web.Site.Areas.ProjectManagement.Models.Project.ExtendJobOrderViewModel
@{
    ViewBag.Title = "ExtendJobOrder";
}
<h2>@Html.DisplayFor(model => model.JobOrderName)</h2>

<form method="post">
    <div class="form-horizontal">
        <h4>@Html.DisplayFor(model => model.CustomerName)</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="CustomerName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Html.DisplayFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <label asp-for="JobOrderNumber" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Html.DisplayFor(model => model.JobOrderNumber, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NewDueDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NewDueDate, new { htmlAttributes = new { @class = "form-control" } })
                <span asp-validation-for="NewDueDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
        <div>
            @Html.HiddenFor(model => model.JobOrderId, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.JobOrderName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.JobOrderNumber, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
</form>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
