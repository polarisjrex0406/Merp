@model Merp.Web.Site.Areas.Accountancy.Models.JobOrder.ExtendTimeAndMaterialViewModel

@{
    ViewBag.Title = "ExtendJobOrder";
}

<h2>@Html.DisplayFor(model => model.JobOrderName)</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@Html.DisplayFor(model => model.CustomerName)</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label asp-for="JobOrderNumber" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.JobOrderNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.JobOrderNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label asp-for="NewDateOfExpiration" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NewDateOfExpiration, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NewDateOfExpiration, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Value" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Value, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Value, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
        <div>
            @Html.HiddenFor(model => model.JobOrderId, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.JobOrderName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.JobOrderNumber, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
}

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
