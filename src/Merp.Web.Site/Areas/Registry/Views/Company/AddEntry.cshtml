@model Merp.Web.Site.Areas.Registry.Models.Company.AddEntryViewModel

@{
    ViewBag.Title = "AddEntry";
}

<h2>AddEntry</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>AddEntryViewModel</h4>
        <hr />
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
      <div class="addEntryFields">
        <ul>
          <li><a href="#tabs-1">Company Registry</a></li>
          <li><a href="#tabs-2">Additional Addresses</a></li>
        </ul>
        <div id="tabs-1">
          <div class="form-group">
            @Html.LabelFor(model => model.CompanyName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
              @Html.EditorFor(model => model.CompanyName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
          </div>

          <div class="form-group">
            @Html.LabelFor(model => model.VatNumber, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
              @Html.EditorFor(model => model.VatNumber, new { htmlAttributes = new { @class = "form-control" } })
            </div>
          </div>

          <div class="form-group">
            @Html.LabelFor(model => model.NationalIdentificationNumber, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
              @Html.EditorFor(model => model.NationalIdentificationNumber, new { htmlAttributes = new { @class = "form-control" } })
            </div>
          </div>
          <h5>@Html.DisplayNameFor(model => model.LegalAddress)</h5>
          @Html.EditorFor(model => model.LegalAddress)
        </div>
        <div id="tabs-2">
          <h5>@Html.DisplayNameFor(model => model.ShippingAddress)</h5>
          @Html.EditorFor(model => model.ShippingAddress)
          <h5>@Html.DisplayNameFor(model => model.BillingAddress)</h5>
          @Html.EditorFor(model => model.BillingAddress)
        </div>
      </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <a href="/Registry">Back</a>
</div>
@section head{
  <link href="~/lib/jquery-ui/themes/base/jquery-ui.css" rel="stylesheet" />
}
@section Scripts {   
  @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
  @{ await Html.RenderPartialAsync("_JqueryUIPartial"); }
  <script type="text/javascript">
     $( function() {
       $( ".addEntryFields" ).tabs();
  } );
  </script>
}
